{
    "name": "@konmuc/authz",
    "version": "1.0.1",
    "description": "Authorization layer for konmuc website.",
    "main": "index.js",
    "scripts": {
      "prestart": "npm run -s build",
      "start": "node dist/index.js",
      "dev": "nodemon src/index.js --exec \"node -r dotenv/config -r babel-register\"",
      "clean": "rm -rf dist",
      "build": "npm run clean && mkdir -p dist/src && babel src -s -D -d dist/src",
      "lint": "esw -w src tests",
      "pretest": "npm run build && mkdir -p dist/tests && babel tests -s -D -d dist/tests",
      "test": "node_modules/.bin/intern",
      "server": "npm run pretest && node dist/tests/server.js",
      "prepublish": "npm run build && cp package.json dist/src/package.json && cp README.md dist/src/README.md"
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/konmuc/authz.git"
    },
    "author": "sfrey",
    "license": "Apache License",
    "dependencies": {
      "babel-cli": "^6.26.0",
      "bcrypt": "^1.0.3",
      "bluebird": "^3.5.1",
      "jsonwebtoken": "^8.1.1",
      "moment": "^2.20.1",
      "rand-token": "^0.4.0",
      "uuid": "^3.2.1"
    },
    "devDependencies": {
      "babel-eslint": "^8.0.3",
      "babel-register": "^6.26.0",
      "dotenv": "^4.0.0",
      "eslint": "^4.12.1",
      "eslint-plugin-import": "^2.8.0",
      "eslint-watch": "^3.1.3",
      "node-fetch": "^2.0.0",
      "nodemon": "^1.12.1",
      "express": "^4.16.2",
      "express-session": "^1.15.6",
      "body-parser": "^1.18.2",
      "mongoose": "^5.0.4",
      "morgan": "^1.9.0",
      "intern": "^4.1.5"
    },
    "babel": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": "current"
            }
          }
        ]
      ]
    },
    "eslintConfig": {
      "parser": "babel-eslint",
      "plugins": [
        "import"
      ],
      "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
      },
      "env": {
        "node": true
      },
      "extends": [
        "eslint:recommended"
      ],
      "rules": {
        "no-console": [
          "error",
          {
            "allow": [
              "info",
              "warn",
              "error"
            ]
          }
        ]
      }
    }
  }
  